<div class="container mt-5">
    <br>
    <h2>Contact Details</h2>
    <% if (!contact) { %>
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </symbol>
        </svg>
        <div class="alert alert-danger d-flex align-items-center col-md-3" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <div>
            Data is an Empty
            </div>
        </div>
        <a href="/contact" class="card-link">Back to Contacts List</a>
        <% } else { %>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Nama : <%= contact.name %></h5>
            <p class="card-text">Email : <%= contact.email %></p>
            <p class="card-text">Mobile : <%= contact.mobile %></p>
            <a href="/contact/edit/<%= contact.name %>" class="btn btn-primary badge rounded-pill">edit</a>
            <a href="/contact/delete/<%= contact.name %>" class="btn btn-danger badge rounded-pill" onclick="return confirm('Do you want to delete this data?')">delete</a>
            <br>
            <br><a href="/contact" class="card-link">Back to Contacts List</a>
        </div>
    </div>
    <% } %>
</div>   