<%- include('layout/nav') %>

<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <form action="/users/add-thread" method="post">
                        <h5 class="card-title">Add New Disscussion</h5>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Pengguna</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="id_user" value="<%= user %>" disabled readonly>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Main Forum</label>
                            <div class="col-sm-10">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Pilih Kategori</option>
                                    <% main.forEach((mf, i) => { i++ %>
                                        <option><%= mf.title %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Sub Forum</label>
                            <div class="col-sm-10">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Pilih Kategori</option>
                                    <% subs.forEach((sf, i) => { i++ %>
                                        <option><%= sf.title_sub %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Judul Thread</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="title_thread">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Date</label>
                            <div class="col-sm-10">
                                <input type="datetime-local" name="date_thread">
                            </div>
                        </div>
                            <div class="quill-editor-default">
                                <input type="text" name="body_thread">
                            </div>
                            
                            <div class="gap-2 mt-3">
                                <button type="submit" class="btn btn-primary">Post</button>
                                <a href="/users/dashboard" class="btn btn-primary">Cancel</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>       
</main>